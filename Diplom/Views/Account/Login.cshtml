@model Diplom.ViewModels.LoginViewModel

<div class="px-4 py-5 px-md-5 text-center text-lg-start">
    <div class="container">
        <div class="row gx-lg-5 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h1 style="text-shadow: 0px 4px 9px rgba(77,75,75,0.21);" class="my-5 display-3 fw-bold ls-tight text-primary ">
                    Авторизация
                </h1>
                <p style="color: hsl(217, 10%, 50.8%)">

                </p>
            </div>
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card shadow p-3 mb-5 bg-white rounded">
                    <div class="card-body py-5 px-md-5 ">
                        <form method="post" asp-controller="Account" asp-action="Login"
                             asp-route-returnUrl="@Model.ReturnUrl">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="mb-2">
                                <input type="text" id="form3Example3" class="form-control" asp-for="Email" placeholder="Имя пользователя" />
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-2">
                                <input type="password" id="form3Example3" class="form-control" asp-for="Password" placeholder="Пароль" />
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                                <label class="form-check-label" for="flexCheckDefault">Запомнить</label>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block">
                                    Войти
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



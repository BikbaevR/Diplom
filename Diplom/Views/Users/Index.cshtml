<div class="row">
    @foreach (var user in Model)
    {
    <div class="col" style="margin-bottom:2%;">
            <div class="card" style="width: 18rem;">
                <div style="width: 18rem; height:18rem;">
                    <img style="object-fit: cover; width: 100%; height: 100%;" class="card-img-top" src="~/img/@user.image" alt="Card image cap">
                </div>
                <div class="card-body">
                    <p class="card-title"><b>Имя пользователя:</b> @user.UserName</p>
                    <p class="card-text"><b>Email:</b> @user.Email</p>
                    <div style="width:100%;">
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <a style="width:100%; margin:1px;" class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@user.Id">Изменить</a><br />
                            <a style="width:100%; margin:1px;" class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a><br />
                            <button style="width:100%; margin:1px;" type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form>
                    </div>
                </div>
            </div>
    </div>
    }
</div>


@model Diplom.Models.Events
@{
    ViewBag.Title = "Редактирование мероприятия";
}
<form asp-action="Edit" asp-controller="Home" enctype="multipart/form-data" method="post">
    <input type="text" name="Id" value="@ViewBag.Id" readonly />

    <div class="form-group">
        <label asp-for="catigory" class="control-label">Категория</label>
        @Html.DropDownListFor(model => model.catigory, ViewBag.catigoryItems as SelectList, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="short_description" class="control-label">Короткое описание</label>
        <input type="text" asp-for="short_description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="description" class="control-label">Полное описание</label>
        <textarea type="text" asp-for="description" class="form-control" rows="10"></textarea>
    </div>


    <div class="form-group">
        <label asp-for="img_one" class="control-label">Картинка 1</label>
        <input accept="image/*" type="file" asp-for="img_one" class="form-control" />

        <img style="max-width:250px; margin:1%;" src="~/img/events/@Model.img_one">

        <input type="text" name="img_one_old" value="@Model.img_one" hidden readonly />
    </div>



    <div class="form-group">
        <label asp-for="img_two" class="control-label">Картинка 2</label>
        <input accept="image/*" type="file" asp-for="img_two" class="form-control" />

        <img style="max-width:250px; margin:1%;" src="~/img/events/@Model.img_two">

        <input type="text" name="img_two_old" value="@Model.img_two" hidden readonly />
    </div>


    <div class="form-group">
        <label asp-for="img_three" class="control-label">Картинка 3</label>
        <input accept="image/*" type="file" asp-for="img_three" class="form-control" />

        <img style="max-width:250px; margin:1%;" src="~/img/events/@Model.img_three">

        <input type="text" name="img_three_old" value="@Model.img_three" hidden readonly />
    </div>

    <div class="form-group">
        <label asp-for="age_limit" class="control-label">Возростное ограничение</label>
        <input type="number" asp-for="age_limit" min="1" max="70" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="start_date" class="control-label">Дата начала</label>
        <input type="datetime-local" asp-for="start_date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="city" class="control-label">Город проведения</label>
        <input type="text" asp-for="city" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="registrations_required" class="control-label">Необходимое количество участников</label>
        <input type="number" asp-for="registrations_required" min="1" class="form-control" />
    </div>

    <br />
    <div class="form-group">
        <input type="submit" style="background-color: #66a5ad !important; color: white" value="Отправить" class="btn btn-default" />
    </div>
</form>


